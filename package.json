{
  "name": "narkdown",
  "displayName": "Narkdown",
  "description": "Bring Notion-like editing experience to Markdown files with slash commands and WYSIWYG editor",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdownEditor.customEditor",
        "displayName": "Narkdown WYSIWYG Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "markdownEditor.openCustomEditor",
        "title": "Open with Narkdown WYSIWYG Editor"
      },
      {
        "command": "markdownEditor.openDefaultEditor",
        "title": "Open with Default Editor"
      }
    ],
    "keybindings": [],
    "menus": {}
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/narkdown/narkdown"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.6",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "prettier": "^3.6.2"
  }
}
