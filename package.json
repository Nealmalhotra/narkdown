{
  "name": "narkdown",
  "displayName": "Narkdown",
  "description": "Bring Notion-like editing experience to Markdown files with slash commands",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "narkdown.showCommands",
        "title": "Show Slash Commands",
        "category": "Narkdown"
      },
      {
        "command": "narkdown.toggleTask",
        "title": "Toggle Task Completion",
        "category": "Narkdown"
      }
    ],
    "keybindings": [
      {
        "command": "narkdown.showCommands",
        "key": "ctrl+/",
        "mac": "cmd+/",
        "when": "editorTextFocus && resourceExtname == .md"
      },
      {
        "command": "narkdown.toggleTask",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && resourceExtname == .md"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "narkdown.showCommands",
          "when": "resourceExtname == .md",
          "group": "1_modification"
        },
        {
          "command": "narkdown.toggleTask",
          "when": "resourceExtname == .md",
          "group": "1_modification"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/narkdown/narkdown"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.6",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
